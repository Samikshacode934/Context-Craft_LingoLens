{
  "manifest_version": 3,
  "name": "ContextCraft - The AI Research Assistant",
  "version": "1.0",
  "description": "Summarize, translate, and generate study questions for any webpage using Chrome's built-in AI APIs.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
